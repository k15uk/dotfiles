# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4
set $alt Mod1
set $ctrl Control

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: Noto sans Mono CJK JP 12px

# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod + Return exec "urxvtc"

# start a terminal
mode "tmuxalt" {
  bindsym h split h mode "default" , exec "urxvtc ; i3-msg move left"
  bindsym j split v mode "default" , exec "urxvtc"
  bindsym k split v mode "default" , exec "urxvtc ; i3-msg move up"
  bindsym l split h mode "default" , exec "urxvtc"

  # back to normal: Enter or Escape or $mod+r
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $ctrl + f mode "tmuxalt"

# split in horizontal orientation
bindsym $mod + space split h

# split in vertical orientation
bindsym $alt + space split v

# kill focused window
bindsym $mod + w kill

# start program launcher
bindsym $mod + d exec --no-startup-id ~/.config/rofi/launch.sh

# minimize window restore
# window minimize
# window toggle maximize
bindsym $mod + Shift + f fullscreen toggle
# window ontop
# window toggle floating
bindsym $mod + f floating toggle

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod + 1 workspace number $ws1
bindsym $mod + 2 workspace number $ws2
bindsym $mod + 3 workspace number $ws3
bindsym $mod + 4 workspace number $ws4
bindsym $mod + 5 workspace number $ws5
bindsym $mod + 6 workspace number $ws6
bindsym $mod + 7 workspace number $ws7
bindsym $mod + 8 workspace number $ws8
bindsym $mod + 9 workspace number $ws9
bindsym $mod + 0 workspace number $ws10

# move focused container to workspace
bindsym $alt + 1 move container to workspace number $ws1  , workspace number $ws1
bindsym $alt + 2 move container to workspace number $ws2  , workspace number $ws2
bindsym $alt + 3 move container to workspace number $ws3  , workspace number $ws3
bindsym $alt + 4 move container to workspace number $ws4  , workspace number $ws4
bindsym $alt + 5 move container to workspace number $ws5  , workspace number $ws5
bindsym $alt + 6 move container to workspace number $ws6  , workspace number $ws6
bindsym $alt + 7 move container to workspace number $ws7  , workspace number $ws7
bindsym $alt + 8 move container to workspace number $ws8  , workspace number $ws8
bindsym $alt + 9 move container to workspace number $ws9  , workspace number $ws9
bindsym $alt + 0 move container to workspace number $ws10 , workspace number $ws10

# reload the configuration file
bindsym $mod + Shift + c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod + Shift + r restart

# switch worksppace
bindsym $mod + Tab workspace next
bindsym $mod + $ctrl + Tab workspace prev
bindsym $alt + Tab move container to workspace next , workspace next
bindsym $alt + $ctrl + Tab move container to workspace prev , workspace prev

# exit i3 (logs you out of your X session)
bindsym $mod + Shift + e exec "i3-nagbar warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
  bindsym h resize shrink width 10 px or 10 ppt
  bindsym j resize shrink height 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape or $mod+r
  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# mouse action
bindsym $alt + h exec "xdotool mousemove_relative --polar 270 8"
bindsym $alt + j exec "xdotool mousemove_relative --polar 180 8"
bindsym $alt + k exec "xdotool mousemove_relative --polar 0 8"
bindsym $alt + l exec "xdotool mousemove_relative --polar 90 8"
bindsym $alt + i exec "xdotool click --clearmodifiers 1"
bindsym $alt + o exec "xdotool click --clearmodifiers 2"
bindsym $alt + u exec "xdotool click --clearmodifiers 3"
bindsym $alt + Shift + h exec "xdotool click --clearmodifiers 6"
bindsym $alt + Shift + j exec "xdotool click --clearmodifiers 5"
bindsym $alt + Shift + k exec "xdotool click --clearmodifiers 4"
bindsym $alt + Shift + l exec "xdotool click --clearmodifiers 7"

# focus
bindsym $mod + h focus left
bindsym $mod + j focus down
bindsym $mod + k focus up
bindsym $mod + l focus right

bindsym $mod + a focus parent
bindsym $mod + c focus child

focus_follows_mouse no

bindsym $mod + p exec "maim -s ~/images/$(date +%s).png"
bindsym $mod + $ctrl + p exec "scrot -u -e 'mv $f ~/images/screenshots/'"

bindsym $mod + Left  move left
bindsym $mod + Down  move down
bindsym $mod + Up    move up
bindsym $mod + Right move right

# move focused window
mode "move" {
  bindsym h move left
  bindsym j move down
  bindsym k move up
  bindsym l move right

  bindsym Return mode "default"
  bindsym Escape mode "default"
  bindsym $mod+r mode "default"
}

bindsym $mod + m mode "move"

bindsym $mod + t layout tabbed
bindsym $mod + s layout splith

# Pulseaudio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q -D pulse sset Master 5%+    && pkill -RTMIN+2 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q -D pulse sset Master 5%-    && pkill -RTMIN+2 i3blocks
bindsym XF86AudioMute        exec --no-startup-id amixer -q -D pulse sset Master toggle && pkill -RTMIN+2 i3blocks

# Media player controls
bindsym XF86AudioPlay exec $( [ $( ps aux | grep rhythmbox | grep -v grep | wc -l ) = '0' ] && rhythmbox || $( [ $( playerctl status ) = 'Playing' ] && playerctl stop || playerctl play-pause ) ) && pkill -RTMIN+3 i3blocks
bindsym XF86AudioNext exec playerctl next     && pkill -RTMIN+3 i3blocks
bindsym XF86AudioPrev exec playerctl previous && pkill -RTMIN+3 i3blocks

# Return exec "urxvtc ; i3-msg layout tabbed" wallpaper change ( random )
bindsym $ctrl + $alt + comma exec --no-startup-id "feh --bg-fill --randomize ~/images/wallpaper/*.jpg"

# colors
set $color_1 #000000
set $color_2 #eeeeee
set $color_3 #700000
set $color_4 #007000
set $color_5 #000070

# class                 border    backgr    text      indicator child_border
client.focused          $color_4  $color_4  $color_1  $color_4  $color_4
client.focused_inactive $color_1  $color_1  $color_2  $color_1  $color_1
client.unfocused        $color_1  $color_1  $color_2  $color_1  $color_1
client.urgent           $color_3  $color_1  $color_2  $color_3  $color_3
client.placeholder      $color_1  $color_1  $color_1  $color_1  $color_1

client.background       $color_1

# panel
bar {
  status_command SCRIPT_DIR=/usr/lib/i3blocks/ i3blocks
  position top
  colors {
    background         $color_1
    focused_background $color_1
    statusline         $color_2
    focused_statusline $color_2
    separator          $color_2
    focused_separator  $color_2
    #                  border   bg       fg
    focused_workspace  $color_1 $color_2 $color_1
    active_workspace   $color_1 $color_4 $color_1
    inactive_workspace $color_1 $color_1 $color_2
    urgent_workspace   $color_1 $color_3 $color_2
    binding_mode       $color_1 $color_5 $color_2
  }
}

for_window [class="^.*"] border pixel 3
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [class="Blueberry"] floating enable
