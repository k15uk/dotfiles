separator=false
separator_block_width=16
markup=none
align=right

[wallpaper]
command=feh --bg-fill --randomize ~/images/wallpaper/*.jpg
interval=1800

[cpu_usage]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
label= 
interval=1
color=#99aaff

[memory]
command=$SCRIPT_DIR/memory/memory | tail -n 1
label= 
interval=10
color=#aaff99

[battery]
label= 
command=cat /sys/class/power_supply/battery/capacity
interval=3

[brightness]
label=☀ 
command=./brightness.sh
interval=once
color=#F79494
signal=1

[pulseaudio label]
command=$SCRIPT_DIR/volume-pulseaudio/volume-pulseaudio
interval=once
color=#33cc22
signal=2

[wifi]
label= 
command=$SCRIPT_DIR/wifi/wifi
instance=wlp0s29u1u7
interval=1
color=#91E78B

[public-ip]
label= 
command=wget -qO - icanhazip.com | awk '{ print $1 }'
interval=3600
color=#88ff00

[time]
label= 
command=date '+%Y/%m/%d %H:%M:%S'
interval=1
